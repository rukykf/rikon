{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "no-unused-vars": "warn",
    "prettier/prettier": "error",
    "no-console": "off",
    "no-undef": "warn",
    "prefer-const": "off",
    "object-shorthand": ["warn", "never"],
    "no-param-reassign": "off",
    "global-require": "off",
    "no-await-in-loop": "off"
  }
}
