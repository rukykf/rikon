{
  "name": "rikonserver",
  "productName": "rikonserver",
  "version": "1.0.0",
  "description": "Server application for Rikon HMS",
  "main": "build/src/main.js",
  "scripts": {
    "quickstart": "electron-forge start",
    "start": "cd ../spa && yarn install && yarn build && cd ../desktop-server && electron-forge start",
    "rebuild": "electron-rebuild -f -w sqlite3",
    "package": "cd ../spa && yarn install && yarn build && cd ../desktop-server && tsc && electron-forge package",
    "make": "cd ../spa && yarn install && yarn build && cd ../desktop-server && tsc && electron-forge make",
    "publish": "cd ../spa && yarn install && yarn build && cd ../desktop-server && tsc && electron-forge publish",
    "test": "jest src/server/tests",
    "test:all": "jest",
    "lint": "echo \"No linting configured\""
  },
  "keywords": [],
  "author": {
    "name": "Kofi Oghenerukevwe",
    "email": "rukykf@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./assets/icons/win/icon.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Rikon"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "ajv-keywords": "^3.4.1",
    "body-parser": "^1.19.0",
    "connect-history-api-fallback": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^5.1.1",
    "express": "^4.17.1",
    "faker": "^4.1.0",
    "helmet-csp": "^2.10.0",
    "json2csv": "^5.0.0",
    "knex": "^0.20.13",
    "lodash": "^4.17.15",
    "luxon": "^1.23.0",
    "mysql": "^2.18.1",
    "objection": "^2.1.3",
    "sanitize-caja": "^0.1.4",
    "sqlite3": "^4.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@electron-forge/cli": "^6.0.0-beta.50",
    "@electron-forge/maker-deb": "^6.0.0-beta.50",
    "@electron-forge/maker-rpm": "^6.0.0-beta.50",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.50",
    "@electron-forge/maker-zip": "^6.0.0-beta.50",
    "@types/jest": "^26.0.4",
    "@types/node": "^14.0.22",
    "babel-jest": "^25.3.0",
    "electron": "8.1.1",
    "electron-rebuild": "^1.10.1",
    "electron-winstaller": "^4.0.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-node": "^4.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^26.1.0",
    "prettier": "^1.19.1",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.6"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
